@{
    ViewBag.Title = "LoveItemPage";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Like</h4>
                    <div class="breadcrumb__links">
                        <a href="@Url.Action("Index","MayShop")">Home</a>
                        <a href="@Url.Action("Shop","MayShop")">Shop</a>
                        <span>Like</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Image</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__text">
                                            <h6>@item.Title</h6>
                                        </div>
                                    </td>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__text">
                                            <h4 style="text-align:center">@item.Price đ</h4>
                                        </div>
                                    </td>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="~/Img/@item.Picture" alt="" />
                                        </div>
                                    </td>
                                    <td class="cart__close"><a href="@Url.Action("DeleteItem","LoveProduct",new { @id = item.ProductID })"><i class="fa fa-close"></i></a></td>
                                </tr>

                            }


                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="@Url.Action("Shop","MayShop")">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn update__btn">
                            <a href="@Url.Action("DeleteLoveItem","LoveProduct")"><i class="fa fa-spinner"></i>Delete All Like</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
